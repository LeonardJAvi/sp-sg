%tr{ id: "row-#{state.id}" }
	- if can? :destroy_multiple, State
		%td.item-check{style:"width: 10%"}
			= link_to "", admin_state_path(state), remote: true, class: "show-row"
			%input{ type:"checkbox", class: "filled-in", id: "checkbox-#{state.id}", 'checklist-model'=>"check", 'checklist-value'=>"#{state.id}", "ng-click"=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{state.id}" }

	%td{style:"width: 30%"}
		= link_to "", admin_state_path(state, search: @query), remote: true, class: "show-row"
		%span
			= state.name
	- if can? :clone, State
		%td{style:"width: 5%"}
			= link_to admin_state_clone_path(state), class: "btn-floating waves-effect btn-flat" do
				= material_icon.md_24.content_copy.css_class("md-dark")
	%td{style:"width: 5%"}
		= link_to admin_state_path(state), class: "btn-floating waves-effect btn-flat" do
			= material_icon.md_24.more_horiz.css_class("md-dark")
