.wrapper
	.wrapper-body.container
		.actions
		= link_to admin_orders_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
			= material_icon.md_18.arrow_back.css_class("md-dark")
			
		= link_to request.original_url+'.pdf', class: "btn-floating right btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
			= material_icon.md_18.description.css_class("md-dark")	
		.card
			.card-content
				%ul.list
					%li.list-row
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.id")
						.display-value.fs-body-1.tc-black-2= @order.id.to_s.humanize
					%li.list-row
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.name_client")
						.display-value.fs-body-1.tc-black-2= @order.name_client.to_s.humanize
					%li.list-row
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.identification_client")
						.display-value.fs-body-1.tc-black-2= @order.identification_client.to_s.humanize
					%li.list-row
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.phone_client")
						.display-value.fs-body-1.tc-black-2= @order.phone_client.to_s.humanize
					%li.list-row
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.email_client")
						.display-value.fs-body-1.tc-black-2= @order.email_client.to_s.humanize
					
					%table.responsive-table
						%thead
							%tr
								%th Number Edition
								%th State
								%th Date Start Real
								%th Date Start Planned
								%th Date End Real
								%th Date End Planned
								%th Observation
						%tbody
							-cont = 0
							-@order.historyorders.each do |history_order|
								%tr
									%td
										=cont
									%td
										=history_order.stack_state_id
									%td
										=history_order.date_start_real
									%td
										=history_order.date_start_planned
									%td
										=history_order.date_end_real
									%td
										=history_order.date_end_planned
									%td
										=history_order.observation
								-cont = cont+1
								
									