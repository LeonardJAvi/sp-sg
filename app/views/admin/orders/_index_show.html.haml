.listing-show-header
	.actions
		- if can? :update, Order
			= link_to edit_admin_order_path(@order), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%ul.list
			%li.list-row
				.display-label= t("activerecord.attributes.order.name_client")
				.display-value= @order.name_client
			%li.list-row
				.display-label= t("activerecord.attributes.order.identification_client")
				.display-value= @order.identification_client
			%li.list-row
				.display-label= t("activerecord.attributes.order.phone_client")
				.display-value= @order.phone_client
			%li.list-row
				.display-label= t("activerecord.attributes.order.email_client")
				.display-value= @order.email_client
			%li.list-row
				.display-label= t("activerecord.attributes.order.date_start_planned")
				.display-value= @order.date_start_planned
			%li.list-row
				.display-label= t("activerecord.attributes.order.date_start_real")
				.display-value= @order.date_start_real
			%li.list-row
				.display-label= t("activerecord.attributes.order.date_end_planned")
				.display-value= @order.date_end_planned
			%li.list-row
				.display-label= t("activerecord.attributes.order.date_end_real")
				.display-value= @order.date_end_real
			%li.list-row
				.display-label= t("activerecord.attributes.order.date_pause")
				.display-value= @order.date_pause
			%li.list-row
				.display-label= t("activerecord.attributes.order.state")
				.display-value= @order.state
			%li.list-row
				.display-label= t("activerecord.attributes.order.payment_currency")
				.display-value= @order.payment_currency
			%li.list-row
				.display-label= t("activerecord.attributes.order.price_project")
				.display-value= @order.price_project
			%li.list-row
				.display-label= t("activerecord.attributes.order.project_id")
				.display-value= @order.project_id
			%li.list-row
				= link_to t('keppler.actions.back_history'), admin_orders_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
