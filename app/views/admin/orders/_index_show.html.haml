.listing-show-header
	.actions
		= link_to "#modal-#{@order.id}", class: "btn-floating waves-effect waves-light btn-flat tooltipped modal-trigger", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.change_rol")  do
			= material_icon.md_24.supervisor_account
		- if can? :update, Order
			= link_to edit_admin_order_path(@order), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%ul.list
			%li.list-row
				.display-label= t("activerecord.attributes.order.name_client")
				.display-value= @order.name_client
			%li.list-row
				= link_to t('keppler.actions.back_history'), admin_orders_path

= render "admin/orders/modal"
:javascript
	$(".modal-trigger").leanModal();
	$('.tooltipped').tooltip({delay: 1});