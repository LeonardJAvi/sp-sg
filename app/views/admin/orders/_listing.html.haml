%tr{ id: "row-#{order.id}" }
	- if can? :destroy_multiple, Order
		%td.item-check{style:"width: 10%"}
			= link_to "", admin_order_path(order), remote: true, class: "show-row"
			%input{ type:"checkbox", class: "filled-in", id: "checkbox-#{order.id}", 'checklist-model'=>"check", 'checklist-value'=>"#{order.id}", "ng-click"=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{order.id}" }

	%td{style:"width: 30%"}
		= link_to "", admin_order_path(order, search: @query), remote: true, class: "show-row"
		%span
			= order.name_client
	%td{style:"width: 30%"}
		= link_to "", admin_order_path(order, search: @query), remote: true, class: "show-row"
		%span
			= order.identification_client
	%td{style:"width: 30%"}
		= link_to "", admin_order_path(order, search: @query), remote: true, class: "show-row"
		%span
			= order.phone_client
	%td{style:"width: 30%"}
		= link_to "", admin_order_path(order, search: @query), remote: true, class: "show-row"
		%span
			= order.email_client
