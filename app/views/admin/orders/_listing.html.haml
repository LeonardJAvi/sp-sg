			= order.project_id
	- if can? :clone, Order
		%td{style:"width: 5%"}
			= link_to admin_order_clone_path(order), class: "btn-floating waves-effect btn-flat" do
				= material_icon.md_24.content_copy.css_class("md-dark")
	%td{style:"width: 5%"}
		= link_to admin_order_path(order), class: "btn-floating waves-effect btn-flat" do
			= material_icon.md_24.more_horiz.css_class("md-dark")
