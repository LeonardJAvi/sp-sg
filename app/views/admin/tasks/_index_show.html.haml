.listing-show-header
	.actions
		- if can? :update, Task
			= link_to edit_admin_task_path(@task), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%ul.list
			%li.list-row
				.display-label= t("activerecord.attributes.task.price_bolivar")
				.display-value= @task.price_bolivar
			%li.list-row
				.display-label= t("activerecord.attributes.task.price_dolar")
				.display-value= @task.price_dolar
			%li.list-row
				.display-label= t("activerecord.attributes.task.cost_bolivar")
				.display-value= @task.cost_bolivar
			%li.list-row
				.display-label= t("activerecord.attributes.task.cost_dolar")
				.display-value= @task.cost_dolar
			%li.list-row
				.display-label= t("activerecord.attributes.task.phase_id")
				.display-value= @task.phase.name
			%li.list-row
				.display-label= t("activerecord.attributes.task.project")
				.display-value= @task.phase.project.name
			%li.list-row
				= link_to t('keppler.actions.back_history'), admin_tasks_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
