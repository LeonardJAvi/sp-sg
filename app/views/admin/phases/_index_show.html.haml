.listing-show-header
	.actions
		- if can? :update, Phase
			= link_to edit_admin_phase_path(@phase), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%ul.list
			%li.list-row
				.display-label= t("activerecord.attributes.phase.name")
				.display-value= @phase.name
			%li.list-row
				.display-label= t("activerecord.attributes.phase.description")
				.display-value= @phase.description
			%li.list-row
				.display-label= t("activerecord.attributes.phase.project_id")
				.display-value= @phase.project_id
			%li.list-row
				= link_to t('keppler.actions.back_history'), admin_phases_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
