.container
	.devise-horizontal
		.devise-vertical
			.devise-box.card
				.devise-box-header
					.devise-box-title Registro
				= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f|
					.devise-box-body.row
						.input-field.col.s4
							= f.text_field :name, :autofocus => true, class: "form-control"
							= f.label :name
						.input-field.col.s4
							= f.text_field :last_name, :autofocus => true, class: "form-control"
							= f.label :last_name
						.input-field.col.s4
							= f.text_field :identification, :autofocus => true, class: "form-control"
							= f.label :identification
						.input-field.col.s4
							= f.email_field :email, :autofocus => true, class: "form-control"
							= f.label :email
						.input-field.col.s4
							= f.password_field :password,  :autofocus => true, class: "form-control"
							= f.label :password
						.input-field.col.s4
							= f.password_field :password_confirmation,  :autofocus => true, class: "form-control"
							= f.label :password_confirmation
						.input-field.col.s4
							= f.text_field :birthdate,  :autofocus => true, class: "form-control datepicker"
							= f.label :birthdate
						.input-field.col.s4
							= f.telephone_field :phone,  :autofocus => true, class: "form-control"
							= f.label :phone
						.input-field.col.s4
							= f.text_field :address,  :autofocus => true, class: "form-control"
							= f.label :address
					.devise-box-footer.row
						.col.s9.m6.l6
							= devise_error_messages!
						.col.s3.m6.l6
							= f.submit 'Sign up', :class => 'right btn'
						.col.s12.devise-logo.center-align.hidden-xs
							= image_tag 'admin/slice.png'